@model IEnumerable<HumanResourcesManagmentCapstone.ViewModel.NetworkViewModel>

<h4>Network List</h4>

@if (Model.Count() == 0)
{
    <p>This member does not have any networks</p>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContactsNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlatformType)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactsNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlatformType)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.EmployeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>
}